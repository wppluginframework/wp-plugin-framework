{
  "name": "wppluginframework/wp-plugin-framework",
  "description": "Convenient and light-weight WordPress plugin framework.",
  "keywords": ["wordpress","plugin","framework","mvc"],
  "homepage": "https://github.com/wppluginframework/wp-plugin-framework",
  "type": "library",
  "license": "LGPL-3.0",
  "authors": [
    {
      "name": "WpPluginFramework",
      "email": "post@wppluginframework.org",
      "homepage": "https://www.wppluginframework.org"
    }
  ],
  "require": {
    "php": ">=5.3.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "phpcompatibility/phpcompatibility-wp": "*",
    "wp-coding-standards/wpcs": "*"
  },
  "scripts": {
    "phpcs": [
      "C:/sandbox/htdocs/plugins/read-more-login/vendor/bin/phpcs --standard=phpcs.ruleset.xml"
    ],
    "phpcbf": [
      "C:/sandbox/htdocs/plugins/read-more-login/vendor/bin/phpcbf  --standard=phpcs.ruleset.xml"
    ]
  },
  "autoload": {
    "psr-4": {"WP_PluginFramework": "src/"}
  }
}
